<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <!--        android:background="@drawable/buttondesign"-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp">

    <TextView
        android:id="@+id/theme_logo"
        android:layout_width="229dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:text="Online Shop "
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/my_logo"
        android:layout_width="127dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="39dp"
        android:src="@drawable/logo_shop" />


</LinearLayout>

    <TextView
        android:id="@+id/themelogo1"
        android:layout_width="229dp"
        android:layout_height="67dp"
android:layout_marginTop="10dp"
        android:layout_below="@id/theme_logo"

        android:gravity="center_horizontal"
        android:text="Meet to your valuable need search
 and buy it "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btjoin"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/themelogo1"

        app:backgroundTint="#ff0000"
        android:background="@drawable/buttondesign"
        android:text="Join Now"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="italic"
         />

    <Button
        android:id="@+id/btlogin"
        android:layout_width="275dp"
        android:layout_height="56dp"
        android:layout_below="@+id/btjoin"


        android:layout_marginTop="30dp"
        android:background="@drawable/shapeborder"
        android:text="Already have an account? Login"
        android:textColor="#fff"
        app:backgroundTint="#ff0000" />




</LinearLayout>