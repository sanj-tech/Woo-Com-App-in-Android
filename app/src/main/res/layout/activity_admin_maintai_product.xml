<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="17dp"

    tools:context=".AdminMaintaiProductAct">


    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/maintain_image"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop">


        </ImageView>

        <EditText
            android:id="@+id/maintain_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapeborder"
            android:gravity="center_horizontal"
            android:hint="Product Name"
            android:padding="12dp"
            android:textAlignment="center"

            android:textColor="#9E0202"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapeborder"
            android:gravity="center_horizontal"
            android:hint="Product Price"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="#9E0202"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/maintain_Descriptin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapeborder"
            android:gravity="center_horizontal"
            android:hint="Product Description"
            android:padding="12dp"
            android:textAlignment="center"

            android:textColor="#9E0202"
            android:textSize="18sp" />

        <Button
            android:id="@+id/apply_changes_bt"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttondesign"
            android:text="Apply Changes"
            app:backgroundTint="#ff0000"></Button>

        <Button
            android:id="@+id/delete_cbt"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttondesign"
            android:text="Delete this Product"
            app:backgroundTint="#ff0000"></Button>


    </LinearLayout>







</androidx.cardview.widget.CardView>