<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView

        android:layout_width="253dp"
        android:layout_height="67dp"

       android:layout_marginLeft="10dp"
        android:layout_marginTop="121dp"
        android:text="Online Shopping "
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/register_app"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="100dp"


        android:src="@drawable/logo_shop" />


</LinearLayout>


    <EditText
        android:id="@+id/regs_userName"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_app"

        android:layout_marginTop="20dp"

        android:background="@drawable/shapeborder"
        android:hint="Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regis_PhoneNo"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"

        android:background="@drawable/shapeborder"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_PhoneNo"

        android:layout_marginTop="8dp"

        android:background="@drawable/shapeborder"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_buttn"
        android:layout_width="315dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttondesign"
        android:text="Create Account"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="#ff0000" />



</LinearLayout>