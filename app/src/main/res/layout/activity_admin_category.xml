<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_catogry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal">


    </TextView>

    <LinearLayout
        android:id="@+id/cateorgy_linear1"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_shirt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/tshirt"></ImageView>

        <ImageView
            android:id="@+id/sport_t_shirt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/sporttshirt"></ImageView>

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/dress"></ImageView>
        <ImageView
            android:id="@+id/sweters"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/sweater">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cateorgy_linear2"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sunglasses"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/sunglasses"></ImageView>

        <ImageView
            android:id="@+id/purses"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/pursers"></ImageView>

        <ImageView
            android:id="@+id/hat"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/hat"></ImageView>
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/shoes">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cateorgy_linear3"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mobile"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/mobile"></ImageView>

        <ImageView
            android:id="@+id/watches"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/watch"></ImageView>

        <ImageView
            android:id="@+id/earcode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/earphone"></ImageView>
        <ImageView
            android:id="@+id/laptop"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/laptop">
        </ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/check_Order_bt"
        android:layout_width="258dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Check New Orders"
        app:backgroundTint="#ff0000"
        android:background="@drawable/buttondesign"
        android:textAllCaps="false">

    </Button>
    <Button
        android:id="@+id/admin_maintain"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Maintain Products"
        app:backgroundTint="#ff0000"
        android:background="@drawable/buttondesign"
        android:textAllCaps="false">

    </Button>



    <Button
        android:id="@+id/admin_logoutbtn"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Admin Logout"
        app:backgroundTint="#ff0000"
        android:background="@drawable/buttondesign"
        android:textAllCaps="false">

    </Button>







</LinearLayout>